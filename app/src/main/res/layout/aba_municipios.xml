<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marcosevaristo.trackusadmin.fragments.AbaMunicipios">

    <ProgressBar
        android:id="@+id/progressBarAbaMunicipios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/listaMunicipiosBuscados"
        android:layout_marginTop="@dimen/marginTopListItens"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/listItensHeight" />

    <EditText
        android:id="@+id/etBuscaMunicipios"
        android:layout_width="@dimen/etBuscaWidth"
        android:layout_height="@dimen/etBuscaHeight"
        android:layout_marginLeft="@dimen/fieldDefaultPadding"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:focusable="true"
        android:maxLength="30"
        android:inputType="number"
        android:hint="@string/hintBuscar"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_search_municipios"
        android:src="@drawable/ic_fab_search"
        android:backgroundTint="@color/greyButtons"
        android:foregroundTint="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/fab_small_sides_margin"
        android:layout_marginEnd="@dimen/fab_small_sides_margin"
        android:layout_marginBottom="@dimen/fab_margin_3"
        android:visibility="invisible"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:layout_gravity="bottom|end"
        app:fabSize="mini"/>

    <include
        layout="@layout/floating_action_button"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/floating_action_buttons"/>

</RelativeLayout>
